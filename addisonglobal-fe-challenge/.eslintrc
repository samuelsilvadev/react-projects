{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"plugins": ["react", "prettier"],
	"rules": {
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", "jsx"]
			}
		],
		"prettier/prettier": "error",
		"max-len": ["error", 80],
		"global-require": "off",
		"import/no-dynamic-require": "off"
	},
	"env": {
		"browser": true,
		"jest": true
	}
}
